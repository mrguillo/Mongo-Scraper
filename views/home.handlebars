<!--Homepage-->
<div class="container">
    <br>
    <div class="row">
        <div class="col-md-12 jumbotron">
            <div class="text-center">
                <h1> New York Times </h1>
                <h3>Mongo Scraper</h3>
                <hr>
                <a class="btn btn-primary btn-lg" href="/scrape" role="button">Scrape</a>
            </div>
        </div>
    </div>
    <div>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    {{#if data}}
                    <div class="div">
                        <h2 class="title">Today's articles</h2>
                    </div>
                    {{#each data}}
                    <div class="card text-white bg-dark mb-3 newscard" style="width: 100%;" data-target="{{_id}}">
                        <div class="card-body">
                            <h5 class="card-title" id="article">{{title}}</h5>
                            <hr>
                            <h6 class="card-subtitle mb-2 text-muted" id="summary">{{summary}}</h6>
                            <a href="{{link}}" target="_blank" rel="noopener noreferrer" class="btn btn-link"
                                role="button"><i class="fas fa-glasses"></i> Read</a>
                            <button class="btn btn-link save-btn" role="button" data-target="{{_id}}" id="save-btn"><i
                                    class="far fa-save"></i> Save</button>
                            <p id="little">Scraped on {{scraped_at}}</p>
                        </div>
                    </div>
                    {{/each}}
                    {{else}}
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="alert alert-success text-center" role="alert">
                                <h4 class="alert-heading">Uh Oh!</h4>
                                <h5>Looks like we don't have any articles just yet.</h5>
                                <hr>
                                <p class="mb-0">Please <a href="/scrape" class="alert-link">scrape</a> to get the
                                    latest.</p>
                            </div>
                        </div>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>

