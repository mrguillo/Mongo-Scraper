<!--Homepage-->
<div class="container">
    <br>
    <div class="col-md-12 jumbotron">
        <div class="text-center">
            <h1> New York Times Mongo Scraper</h1>
        </div>
    </div>
    <div>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    {{#if data}}
                    <h5>Today's articles</h5>
                    <ul class="list">
{{#each data}}
                        <li>{{title}}</li>
{{/each}}
                    </ul>
                    
                    {{else}}
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <h4>Uh Oh. Looks like we don't have any new articles.</h4>
                        </div>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>