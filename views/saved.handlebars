<!--Saved articles page-->
<div class="container">
    <br>
    <div class="row">
        <div class="col-md-12 jumbotron">
            <div class="text-center">
                <h1> New York Times </h1>
                <h3>Mongo Scraper</h3>
            </div>
        </div>
    </div>
    <div>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    {{#if data}}
                    <div class="div">
                        <h2 class="title">Saved articles</h2>
                    </div>
                    {{#each data}}
                    <div class="card text-white bg-dark mb-3" style="width: 100%;" data-target="{{_id}}">
                        <div class="card-body">
                            <h5 class="card-title" id="article">{{title}}</h5>
                            <hr>
                            <h6 class="card-subtitle mb-2 text-muted" id="summary">{{summary}}</h6>
                            <a href="{{link}}" target="_blank" rel="noopener noreferrer" class="btn btn-link btn-sm"
                                role="button"><i class="fas fa-glasses"></i> Read</a>
                            <button href="{{link}}" target="_blank" rel="noopener noreferrer" class="btn btn-link btn-sm"
                                role="button" data-toggle="modal" data-target="#noteModal{{this._id}}"
                                data-id={{this._id}}><i class="far fa-comment"></i> Notes</button>
                                <button class="btn btn-link save-btn" role="button" data-target="{{_id}}" id="save-btn"><i class="fas fa-trash-alt"></i> Delete</button>
                            <p id="little">Scraped on {{scraped_at}}</p>
                        </div>
                    </div>
                    {{/each}}
                    {{else}}
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <h4>Uh Oh. Looks like we don't have any new articles.</h4>
                        </div>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>

<!--Clicked Notes Modal-->
{{#each data}}
{{> notes_modal }}
{{/each}}